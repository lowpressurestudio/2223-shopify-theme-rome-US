@font-face {
    font-family: 'Gibson';
    src: url('{{ 'gibson-webfont.woff2' | asset_url }}') format('woff2'),
         url('{{ 'gibson-webfont.woff' | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
@font-face {
    font-family: 'GibsonSemibold';
    src: url('{{ 'gibson-semibold-webfont.woff2' | asset_url }}') format('woff2'),
         url('{{ 'gibson-semibold-webfont.woff' | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
@font-face {
    font-family: 'PressGothic';
