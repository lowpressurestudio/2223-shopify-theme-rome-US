
<style>
.bg-klaviyo {
  background-image: url({{ 'bg-klaviyo-sign-up-mobile.jpg' | asset_img_url: 'original' }});
  background-position: center;
  background-size: cover;
  background-repeat: none;
}
@media (min-width: 575px) {
  .bg-klaviyo {
    background-image: url({{ 'bg-klaviyo-sign-up.jpg' | asset_img_url: 'original' }});
  }
}
.lps-klaviyo-password {
  position: relative;
}
.klaviyo-form-wrapper div:empty {
  display: block;
}
.klaviyo-form-wrapper {
  position: absolute;
  bottom: 90px;
  left: calc(50% + 20px);
  width: calc(50% - 80px);
  z-index: 4;
}
.klaviyo-form-wrapper label div {
  margin-right: 10px !important;
  font-size: 14px !important;
}
.klaviyo-form-wrapper label svg {
  margin-right: 3px !important;
}
.carousel {
  width:100vw;
  height:100vh;
  background-color: #ddd;
}
.carousel-item {
  background-position: center;
  background-size: cover;
}
.carousel-item .logo-block {
  background-color: #fff;
}
.carousel-item.slide-1 {
  background-image: url({{ '2223-password-slide-1b-mobile.jpg' | asset_img_url: '800x' }});
}
.carousel-item.slide-2 {
  background-image: url({{ '2223-password-slide-2-mobile.jpg' | asset_img_url: '800x' }});
}
.carousel-item.slide-3 {
  background-image: url({{ '2223-password-slide-3-mobile.jpg' | asset_img_url: '800x' }});
}
@media (min-width: 990px) { 
  .carousel-item.slide-1 {
    background-image: url({{ '2223-password-slide-1b.jpg' | asset_img_url: '1400x' }});
  }
  .carousel-item.slide-2 {
    background-image: url({{ '2223-password-slide-2.jpg' | asset_img_url: '1400x' }});
  }
  .carousel-item.slide-3 {
    background-image: url({{ '2223-password-slide-3.jpg' | asset_img_url: '1400x' }});
  }
}
.bottom-bar {
  position: absolute;
  bottom: 40px;
  width: 100%;
}
.bottom-bar > .row {
  margin: 0 32.5px;
}
.white-block {
  background-color: #fff;
}
.white-block h2 {
  font-size: 34px;
}
.white-block h4 {
  font-size: 17px;
}
.white-block h2,
.white-block h4 {
  padding-left: 20px;
  line-height: 1;
  letter-spacing: -0.03em;
}
.logo-wrapper {
  padding: 30px;
}
.underline {
  position: absolute;
  bottom: 36px;
  left: 60px;
  right: 60px;
  height: 6px;
  background-color: #CB0E2E;
  z-index: 1;
}
.underline:after {
  display: block;
  content:'';
  position: absolute;
  bottom: -36px;
  left: 50%;
  margin-left: -17px;
  height: 70px;
  width: 34px;
  background-image: url({{ '2223-password-logo-three-stars.jpg' | asset_img_url: '100x' }});
  background-size: cover;
  background-position: center top;
  background-color: #CB0E2E;
  z-index: 2;
}
.lined-title h1 {
  display: inline-block;
  position: absolute;
  right: 40px;
  top: 30%;
  letter-spacing: -0.03em;
}
.lined-title h1 span {
  font-size: 34px;
  font-family: GibsonSemibold, monospace, sans-serif !important;
  position: relative;
  display: block;
  line-height: 1.27em;
  padding: 0 0.2em;
  background: repeating-linear-gradient(#fff 0.1em, #fff 1.2em, rgba(255,255,255,0) 1.2em, rgba(255,255,255,0) 1.4em);
  z-index: 3;
}
.lined-title h1:after {
  display: block;
  content:'';
  position: absolute;
  left: -0.35em;
  top: 0.128em;
  bottom: 0.018em;
  width: 2em;
  background-color: #CB0E2E;
  z-index: 2;
}
.allwaysdown {
  display: block;
  width: 80px;
  position: absolute;
  top: 20px;
  left: 20px;
  padding: 10px;
  background-color: #fff;
  z-index: 2;
}
@media (min-width: 990px) {
  .bg-20th {
    position: absolute;
    top:0;
    left:0;
    bottom:0;
    width: calc((100% + 85px) * 0.16666);
    background-image: url({{ '2223-password-bg-slide-1-sidebar.jpg' | asset_img_url: '600x' }});
    background-size: cover;
  }
  .allwaysdown {
    width: 110px;
    padding: 15px;
    top: 40px;
    left: 40px;
  }
}
@media (max-width: 990px) {
  .lined-title h1 {
    top: 15%;
  }
  .white-block.newsletter-form {
    min-height: 190px;
  }
  .klaviyo-form-wrapper {
    left: 20px;
    bottom: 70px; 
    width: calc(100% - 40px);
  }
  .lined-title h1 span {
    font-size: 24px;
  }
  .lined-title h1 {
    right: 20px;
    left: 20px;
  }
  .bottom-bar > .row {
    margin: 0 12.5px;
  }
  .white-block h2 {
    font-size: 24px;
  }
  .white-block h4 {
    font-size: 14px;
  }
  .logo-wrapper {
    padding: 35px;
  }
}
@media (max-width: 574.9px) {
  .logo-wrapper {
    padding: 10px;
  }
}
@media (min-width: 1600px) {
  .logo-wrapper {
    padding: 45px;
  }
  .white-block h2 {
    font-size: 45px;
  }
  .white-block h4 {
    font-size: 22px;
  }
  .white-block h2,
  .white-block h4 {
    padding-left: 40px;
  }
}

</style>

