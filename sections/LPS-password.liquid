

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
@font-face {
    font-family: 'URWDIN-Demi';
    src: url('{{ 'urw-din-demi.woff2' | asset_url }}') format('woff2'),
            url('{{ 'urw-din-demi.woff' | asset_url }}') format('woff'),
            url('{{ 'urw-din-demi.ttf' | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
}
* {
    font-family: 'URWDIN-Demi', sans-serif !important;
}
#shopify-section-main-password-header,
footer,
h1.h2 {
    display: none;
}
.password-2122  {
    background-color: #12A2D6;
    height: 100vh;
}
.password-2122 {
    padding-top: 50px;
    height: 100vh;
    background-color: #99BDEF;
    background-image: url("{{'password-bg-clouds.jpg' | asset_url }}");
    background-size: cover;
}
.password-2122 .password-form {
    background-color: #fff;
    border: 1px solid #000;
    border-radius: 30px;
    padding: 30px 0;
}
.password-2122 .password-form h3 {
    font-size: 30px;
    line-height: 40px;
    font-weight: 500;
    padding-bottom: 23px;
    text-align: center;
    width: 100%;
}
.password-2122 .password-form p {
    font-size: 14px;
    font-weight: 300;
    line-height: 22px;
    text-align: center;
    width: 100%;
}
@media (max-width: 991.98px) {
    .password-2122 .mobile-halldor {
        padding-top: 20px;
        padding-bottom: 220px;
        background-image: url("{{'password-halldor-mobile-left-right.png' | asset_url }}");
        background-size: contain;
        background-position: center top;
        background-repeat: no-repeat;
    }
}
.storefront-password-form {
  width: 100%;
  padding: 1rem 2rem 0 2rem;
} 
.storefront-password-form button,
.storefront-password-form .form-control {
  font-size: 1.2rem;
  text-transform: uppercase;
}
.storefront-password-form button,
.storefront-password-form button:hover {
  margin-top: 1rem;
  background-color: #0f0;
  color: #000;
  border: 1px solid #000;
  padding: 0.9rem 1rem 0.6rem 1rem;
}
  
  
</style>

<div id="lps-password-{{ section.id }}" class="container-fluid password-2122">
    <div class="container" style="max-width: 1200px;">
        <div class="row justify-content-center"  style="z-index:1;">
            <div class="col-12 col-sm-10 col-md-8 text-center" style="margin-bottom:-60px;">
                <img style="width: 100% !important; max-width:100% !important;height: auto !important;" src="{{ 'password-logo-lobster-halo.png' | asset_img_url: '800x' }}">
            </div>
        </div>
        <div class="row justify-content-center"  style="z-index:2;">
            <div class="d-none d-lg-flex col-lg-4 text-end justify-content-end" style="z-index:5;">
                <img style="margin-right: -45px;" src="{{ 'password-halldor-desktop-left.png' | asset_img_url: 'x600' }}">
            </div>
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 text-center mobile-halldor" style="z-index:3;">
                <div style="margin-top: 92px;text-align: center;" class="password-form">
                    {%- if section.settings.heading_text != blank -%}
                    <h3>{{ section.settings.heading_text }}</h3>
                    {%- endif -%}
                    {%- if section.settings.subheading_text != blank -%}
                    <p>{{ section.settings.subheading_text }}</p>
                    {%- endif -%}
                    {%- if section.settings.klaviyo_code != blank -%}
                    <div style="margin: 0 auto;" class="{{ section.settings.klaviyo_code }}"></div>
                    {%- endif -%}
                    {%- if section.settings.show_pass == true -%}
                    {% form 'storefront_password' %}
                    <div class="form-group">
                      <input style="border-radius:0;border:1px solid #ccc;" type="password" name="password" class="form-control" id="inputPassword2" placeholder="Password">
                      <button style="margin-left:10px;padding-left:15px;padding-right:15px;" type="submit" class="btn btn-primary">Early Access</button>
                    </div>
                      {{ form.errors | default_errors }}
                    {% endform %}
                    {%- endif -%}
                </div>
            </div>
            <div class="d-none d-lg-flex col-lg-4 text-start" style="z-index:4;">
                <img style="margin-left: -41px;margin-top: 7px;" src="{{ 'password-halldor-desktop-right.png' | asset_img_url: 'x600' }}">
            </div>
        </div>
    </div>
</div>


{% schema %}
{
  "name": "LPS Password",
  "tag": "section",
  "class": "lps-image-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "default": "DROP 2<br>COMING SOON",
      "label": "Heading Text"
    },
    {
        "type": "text",
        "id": "subheading_text",
        "default": "!SIGN UP FOR EARLY ACCESS!",
        "label": "Subheading Text"
    },
    {
      "type": "text",
      "id": "klaviyo_code",
      "default": "klaviyo-form-RfQuVt",
      "label": "Klaviyo Class",
      "info": "Class only (no tags) e.g. klaviyo-form-A1B23c"
    },
    {
      "type": "checkbox",
      "id": "show_pass",
      "default": false,
      "label": "Show Password Field"
    }
  ],
  "presets": [
    {
      "name": "LPS Password"
    }
  ]
}
{% endschema %}
